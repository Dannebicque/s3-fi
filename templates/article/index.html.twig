{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}

    <h1>Articles</h1>

    {% for article in articles %}
        <div>
            <h2>#{{ loop.index }} - {{ article.titre }}</h2>
            <p>{{ article.texte }}</p>
            <i>{{ article.date|date('d/m/Y') }}</i>
        </div>
    {% endfor %}

    <p>Il y {{ articles|length }} article(s)</p>
{% endblock %}
