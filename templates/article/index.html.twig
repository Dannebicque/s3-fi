{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    <h1>Liste des articles</h1>
    <p>Il y a {{ articles|length }} article(s)</p>

    {% for article in articles %}
        <h2>#{{ loop.index }} - {{ article.titre }} ({{ article.categorie != null ? article.categorie.titre : 'Pas de cat√©gorie' }})</h2>
        <p>{{ article.texte }}</p>
        <i>{{ article.datePublication|date('d/m/Y H:i') }}</i>
        <p>{{ article.auteur }}</p>
    {% endfor %}
{% endblock %}
